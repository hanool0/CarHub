<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>CarHub</title>
    <link href="/stylesheets/register.css" rel="stylesheet" />
    <script
      src="https://kit.fontawesome.com/c4254e24a8.js"
      crossorigin="anonymous"
    ></script>
  </head>

  <body>
    <div class="container">
      <div class="form-box">
        <p style = "font-size: 20px">Create your account</p>
        <form action="/signup" method="post" >
          <input placeholder="Name" name="name" type="text">
          <br>
          <input placeholder="Password" name="password" type="password">
          <br>
          <input class="sub" type="submit">
      </form>
          <div class="btn-field">
            <button id="redirectButton">Create account</button>
          </div>
      </div>
    </div>
  </body>
  <script>
    document
      .getElementById("redirectButton")
      .addEventListener("click", redirect);
    function redirect() {
      window.location = "home";
    }
  </script>
</html>
