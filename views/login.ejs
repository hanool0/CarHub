<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>CarHub</title>
    <link href="stylesheets/login.css" rel="stylesheet" type="text/css" />
    <script defer src="/js/login.js"></script>
  </head>

  <body class="login">
    <div class="container">
        <br>
      <h2 class="text-center">CarHub</h2>
      <div class = form-box>
        <form action="/login" class="loginForm" method="post">
          <h2 class="text-center">Login</h2>
            <div class="input-group">
                <label for="username" class="label"><p style = "font-size: 20px">Username:</label></p>
                <input type="text" id="username" class="input">
                <span class="error-message"></span>
            </div>
            <br>
            <div class="input-group">
                <label for="password" class="label"><p style = "font-size: 20px">Password:</label></p>
                <input type="password" id="password" class="input">
                <span class="error-message"></span>
            </div>
            <br>
            <button class="button" type="submit">Login</button>
            <a href = "/register">Make a new account</a>
        </form>
      </div>
    </div>
    </body>

    <script>

    </script>
  </body>
</html>
